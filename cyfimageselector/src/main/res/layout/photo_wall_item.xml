<?xml version="1.0" encoding="utf-8"?>
<com.cyf.cyfimageselector.customviews.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photo_wall_item_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_default_img" />

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#33333333"
        android:visibility="visible" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/photo_wall_item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:checked="false"
        android:gravity="center"
        android:padding="0dp"
        android:theme="@style/MyCheckBox" />

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_btn_gary"
        android:gravity="center"
        android:padding="6dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_delete"
        android:visibility="gone" />

</com.cyf.cyfimageselector.customviews.SquareRelativeLayout>